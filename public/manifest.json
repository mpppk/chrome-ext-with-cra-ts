{
  "name": "test-extension",
  "manifest_version": 2,
  "version": "1.0.0",
  "description": "test-extension | サンプルアプリ",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts" : [
    {
      "matches": [ "<all_urls>" ],
      "js": ["/static/js/content_script.js"]
    }
  ],
  "background": {
    "scripts": ["/static/js/background_script.js"]
  }
}
